      "datasource": "Prometheus",
      "description": "Exibe o status atual dos containers Docker",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [
            {
              "options": {
                "match": "null",
                "result": {
                  "text": "N/A"
                }
              },
              "type": "special"
            },
            {
              "options": {
                "0": {
                  "color": "red",
                  "text": "Stopped"
                },
                "1": {
                  "color": "green",
                  "text": "Running"
                },
                "2": {
                  "color": "yellow",
                  "text": "Paused"
                },
                "3": {
                  "color": "orange",
                  "text": "Restarting"
                },
                "4": {
                  "color": "red",
                  "text": "Dead"
                },
                "5": {
                  "color": "blue",
                  "text": "Created"
                }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          },
          "unit": "none"
